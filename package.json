{
  "name": "bandage",
  "description": "Simple co based test library using tap",
  "author": "Eirik Albrigtsen <analsandblaster@gmail.com>",
  "version": "0.2.0",
  "repository": {
    "type": "git",
    "url": "clux/bandage"
  },
  "keywords": [
    "bndg",
    "co",
    "tape",
    "tap",
    "co-tape",
    "test",
    "unit"
  ],
  "main": "lib",
  "bin": {
    "bndg": "bin.js"
  },
  "scripts": {
    "test": "bndg test/*.test.js",
    "precoverage": "istanbul instrument lib -o lib-cov",
    "coverage": "istanbul cover bndg test/*.test.js && cat coverage/lcov.info",
    "coveralls": "npm run coverage && cat coverage/lcov.info | coveralls"
  },
  "dependencies": {
    "co": "^4.5.4",
    "glob": "^5.0.10",
    "tape": "^4.0.0"
  },
  "devDependencies": {
    "coveralls": "^2.11.2",
    "istanbul-harmony": "^0.3.12"
  },
  "bugs": {
    "url": "http://github.com/clux/bandage/issues"
  },
  "license": "MIT"
}
